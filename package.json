{
  "name": "nearby-services-api",
  "version": "0.0.1",
  "private": true,
  "description": "nearby services api",
  "main": "server.js",
  "scripts": {
    "check-coverage": "istanbul check-coverage --config .istanbul.yml",
    "generate-coverage": "yarn run istanbul -- cover _mocha -- --recursive",
    "generate-unit-coverage": "yarn run istanbul -- cover _mocha -- --recursive test/unit",
    "git-hook": "yarn run lint && yarn run generate-unit-coverage && yarn run check-coverage",
    "istanbul": "NODE_ENV=test istanbul",
    "lint": "eslint --ext .js,.json .",
    "postrewrite": "yarn run git-hook",
    "precommit": "yarn run git-hook",
    "prepush": "yarn run git-hook && yarn run snyk -- test",
    "start": "node server.js",
    "test": "NODE_ENV=test mocha --recursive test/unit",
    "travis": "yarn run git-hook && yarn run upload-coverage && yarn run snyk -- test --org=nhsuk && yarn run snyk -- monitor --org=nhsuk",
    "upload-coverage": "cat ./coverage/lcov.info | coveralls",
    "watch-dev": "nodemon server.js | ./node_modules/bunyan/bin/bunyan",
    "watch-lint": "esw --watch .",
    "watch-test": "yarn run test -- --watch --reporter min"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhsuk/nearby-services-api.git"
  },
  "bugs": {
    "url": "https://github.com/nhsuk/nearby-services-api/issues"
  },
  "dependencies": {
    "express": "^4.15.3",
    "express-validator": "^3.0.0",
    "helmet": "^3.6.1",
    "moment": "^2.16.0",
    "moment-opening-times": "^2.0.1",
    "mongodb": "^2.2.28",
    "nhsuk-bunyan-logger": "^1.4.0",
    "verror": "^1.9.0"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "chai-http": "^3.0.0",
    "chai-moment": "^0.1.0",
    "coveralls": "^2.12.0",
    "eslint": "^4.1.1",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-nhsuk": "^0.2.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-mocha": "^4.10.1",
    "eslint-plugin-react": "^7.1.0",
    "eslint-watch": "^3.1.1",
    "husky": "^0.14.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "snyk": "^1.34.4"
  },
  "author": "",
  "license": "MIT",
  "snyk": true
}
